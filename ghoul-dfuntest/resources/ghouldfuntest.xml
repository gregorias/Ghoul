<?xml version="1.0" encoding="UTF-8"?>
<kademliadfuntest>
  <LocalEnvironmentFactory>
    <environmentCount>
      8
    </environmentCount>
  </LocalEnvironmentFactory>
  <SSHEnvironmentFactory>
    <hosts>
      <!-- Provide list of SSH accessible hosts to test separated by a comma.-->
      roti.mimuw.edu.pl,
      planetlab2.inf.ethz.ch
    </hosts>
    <username>
      mimuw_nebulostore
    </username>
    <privateKeyPath>
      <!-- Provide path to ssh private key, it has to be accessible -->
      /home/grzesiek/.ssh/id_rsa
    </privateKeyPath>
  </SSHEnvironmentFactory>
  <MultiTestRunner>
    <shouldPrepareEnvironments>
      true
    </shouldPrepareEnvironments>
    <shouldCleanEnvironments>
      true
    </shouldCleanEnvironments>
  </MultiTestRunner>

  <KademliaAppFactory>
    <javaCommand>
      java
    </javaCommand>
  </KademliaAppFactory>

  <KademliaEnvironmentPreparator>
    <bucketSize>
      1
    </bucketSize>
    <initialPort>
      9000
    </initialPort>
    <initialRestPort>
      10000
    </initialRestPort>
    <useDifferentPorts>
      true
    </useDifferentPorts>
  </KademliaEnvironmentPreparator>
</kademliadfuntest>
